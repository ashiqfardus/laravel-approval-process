{
    "name": "ashiqfardus/laravel-approval-process",
    "description": "Enterprise-grade Laravel approval workflow engine with multi-level approvals, SLA management, and advanced delegation",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ashiq Fardus",
            "email": "ashiqfardus@hotmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/framework": "^10.0|^11.0|^12.0",
        "doctrine/dbal": "^3.0 || ^4.0"
    },
    "suggest": {
        "spatie/laravel-query-builder": "For advanced query filtering",
        "spatie/laravel-activitylog": "For detailed activity logging",
        "symfony/expression-language": "For complex conditional logic"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "laravel/pint": "^1.0",
        "nunomaduro/larastan": "^2.0",
        "mockery/mockery": "^1.5",
        "orchestra/testbench": "^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "AshiqFardus\\ApprovalProcess\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AshiqFardus\\ApprovalProcess\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "AshiqFardus\\ApprovalProcess\\ApprovalProcessServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}